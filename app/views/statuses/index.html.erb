<div class="page-header">
  <h1>Todos los Estados</h1>
</div>

  <%= link_to "Nuevo Estado", new_status_path, class: "btn btn-success" %>
  <%= link_to "Deslogueate", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
  <% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.user.full_name %></strong>
    <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %> |
        <span class="admin">
          <%= link_to "Edit", edit_status_path(status) %> |
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Estas seguro de que quieres eliminar el estado?"} %>
        </span>
      </div>
  </div>

  <% end %>
